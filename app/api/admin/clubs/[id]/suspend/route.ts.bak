import { NextRequest, NextResponse } from 'next/server'
import { requireSuperAdmin } from '@/lib/auth/actions'
import { prisma } from '@/lib/config/prisma'

export async function POST(
  request: NextRequest,
  { params }: { params: Promise<{ id: string }> }
) {
  try {
    const paramData = await params
    const { id } = paramData
    
    const session = await requireSuperAdmin()
    const { reason } = await request.json()
    
    const club = await prisma.Club.findUnique({
      where: { id: id }
    })
    
    if (!club) {
      return NextResponse.json(
        { error: 'Club no encontrado' },
        { status: 404 }
      )
    }
    
    if (club.status !== 'APPROVED') {
      return NextResponse.json(
        { error: 'Solo se pueden suspender clubes aprobados' },
        { status: 400 }
      )
    }
    
    const updatedClub = await prisma.Club.update({
      where: { id: id },
      data: {
        status: 'SUSPENDED',
        active: false
      }
    })
    
    // Cancelar todas las reservas futuras
    await prisma.Booking.updateMany({
      where: {
        clubId: id,
        date: { gte: new Date() },
        status: { in: ['PENDING', 'CONFIRMED'] }
      },
      data: {
        status: 'CANCELLED',
        cancelledAt: new Date()
      }
    })
    
    // TODO: Enviar notificaciones de cancelación a usuarios afectados
    // TODO: Enviar notificación al club de suspensión
    
    return NextResponse.json({
      success: true,
      club: updatedClub
    })
    
  } catch (error) {
    console.error('Error suspending club:', error)
    return NextResponse.json(
      { error: 'Error interno del servidor' },
      { status: 500 }
    )
  }
}